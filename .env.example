# Server
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/roommate_db?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=30d

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# OTP
OTP_EXPIRY_MINUTES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:19006

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback
FRONTEND_URL=http://localhost:8080

# Cloudflare R2 (Photo Uploads)
# R2_ACCOUNT_ID     → Cloudflare Dashboard → right sidebar → Account ID
# R2_ACCESS_KEY_ID  → R2 → Manage R2 API Tokens → Create API Token (Object Read & Write)
# R2_SECRET_ACCESS_KEY → same as above (shown once on creation)
# R2_BUCKET_NAME    → R2 → Create Bucket → name it "roommate-photos"
# R2_PUBLIC_URL     → R2 → your bucket → Settings → Public Access → enable & copy URL
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=roommate-photos
R2_PUBLIC_URL=https://your-r2-public-domain.com
